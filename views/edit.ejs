<% include partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit: <%= blog.title %></div>
    <form method="POST" action="/blogs/<%= blog.id %>?_method=PUT" class="ui form">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class="field">
            <textarea name="blog[body]"><%= blog.body %></textarea>
        </div>
        <input type="submit" class="ui green basic big button">
    </form>
</div>
<% include partials/footer %>