<% include partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attachment">
        <div class="item">
            <img class="ui centered rounded image" src="<%= blog.image %>">
            <div class="content">
                    <span><%= blog.created.toDateString() %></span>
            </div>
            <div class="description">
                <p><%- blog.body %> </p>
            </div>
            <a class="ui button red basic" href="/blogs/<%= blog.id %>/edit">Edit</a>
            <form id="delete"method="POST" action="/blogs/<%= blog.id %>?_method=DELETE">
                <button class="ui basic button green">Delete</button>
            </form>
        </div>
    </div>
</div>
<% include partials/footer %>